<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
       <h4 class="mb-2">尋找餐廳：</h4>

      <form action="/search" class="search__form">
       
        <div class="input-group shadow ">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keywords }}" aria-describedby="search-button">
            <div class="input-group-append">
              <button  type="submit" class="btn btn-major" id="search-button"><i class="fas fa-search"></i></button>
            </div>  
        </div>

        <div class="input-group ">

          <div class="dropdown ml-3 shadow sorter">
            <button class="btn btn-warning dropdown-toggle sorter__text" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              排序
            </button>

            <div type="submit" class="dropdown-menu" aria-labelledby="dropdownMenu">
              <button name="sortRule" value="asc" class="dropdown-item" >A~Z</button>
              <button name="sortRule" value="desc" class="dropdown-item" >Z~A</button>
            </div>

          </div>

          <div class="dropdown ml-3 shadow sorter">
            <button class="btn btn-warning dropdown-toggle sorter__text" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{#if queryArr.filterCategory}}
                {{queryArr.filterCategory}}
                {{else}}
                類別
              {{/if}}
            </button>
            <div type="submit" class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <button name="filterCategory" value="" class="dropdown-item">選擇餐廳類型</button>
              <div class="dropdown-divider"></div>
              {{#each categories}}
              <button name="filterCategory" value="{{ this }}" class="dropdown-item">{{ this }}</button>
              {{/each}}
            </div>
          </div>

          <div class="dropdown ml-3 shadow sorter">
            <button class="btn btn-warning dropdown-toggle sorter__text" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{#if queryArr.filterArea}}
                {{queryArr.filterArea}}
                {{else}}
                地區
              {{/if}}
            </button>
            <div type="submit" class="dropdown-menu" aria-labelledby="dropdownMenu3">
              <button name="filterArea" value="" class="dropdown-item" >選擇餐廳地區</button>
              <div class="dropdown-divider"></div>
              {{#each areas}}
              <button name="filterArea" value="{{ this }}" class="dropdown-item" >{{ this }}</button>
             {{/each}}
            </div>
          </div> 

          
          <button type="submit" name="clear" value="true" class="btn ml-3 btn-dark">重置</button>
        </div>

      </form>

    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      <div class="row ">
      {{#each restaurant}}
          <div class="col-sm-4">

          
            <div class="card  mb-4 " data-aos="fade-up">
              <a href="./restaurant/{{this._id}}" class="text-secondary">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="card-footer text-muted justify-content-end">

                <a type="button" href="./restaurant/{{this._id}}" class="btn btn-danger btn-sm mb-2 shadow-sm">More</a>
                <a type="button" href="./restaurant/{{this._id}}/edit" class="btn btn-warning btn-sm mb-2 shadow-sm">Edit</a>

                <button type="button" class="btn btn-outline-secondary btn-sm mb-2 delete__restaurant__btn shadow-sm" data-toggle="modal" data-target="#ModalDelete" data-id="{{this._id}}">Delete</button>
              </div>
            </div>
          </div>
      {{/each}}
      </div>

    </div>
  </div>
</div>

