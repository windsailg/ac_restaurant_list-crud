<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">


  <div class="row mb-4">

    <div class="col-md-10 mx-auto">
      <a type="button" href="/" class="btn btn-danger btn-sm"><i class="fas fa-arrow-alt-circle-left"></i>  Back</a>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary font-weight-bold">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary font-weight-bold">
          <i class="fas fa-medal pr-1"></i>
          評分：
        </span>{{restaurant.rating}}
         顆星
      </p>

      <p class="mb-1">
        <span class="text-secondary font-weight-bold">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary font-weight-bold">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-5 w-100 shadow-lg" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 600px;">
      <a href="/restaurant/{{restaurant._id}}/edit" class="btn btn-warning btn-lg shadow"><i class="fas fa-edit"></i>  Edit</a>
      
      <button type="button" class="btn btn-outline-secondary btn-lg delete__restaurant__btn" data-toggle="modal" data-target="#ModalDelete" data-id="{{restaurant._id}}">Delete</button>
    </div>
  </div>

</div>



